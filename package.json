{
    "name": "file-host",
    "version": "1.2.0",
    "description": "Private file hosting",
    "license": "GPL-3.0-only",
    "main": "dist/index.js",
    "type": "module",
    "engines": {
        "node": ">=18",
        "pnpm": ">=1.22.0"
    },
    "homepage": "https://github.com/Pepijn98/file-host#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Pepijn98/file-host.git"
    },
    "bugs": {
        "url": "https://github.com/Pepijn98/file-host/issues"
    },
    "author": {
        "email": "pepijn@vdbroek.dev",
        "name": "Pepijn van den Broek",
        "url": "https://vdbroek.dev"
    },
    "scripts": {
        "deploy": "pm2 start ecosystem.config.js --env production",
        "start": "pnpm build && cross-env NODE_ENV=production node ./dist/index.js",
        "test": "pnpm build && cross-env NODE_ENV=development node ./dist/index.js",
        "dev": "cross-env NODE_ENV=development node --loader @bleed-believer/path-alias ./src/index.ts",
        "build": "pnpm clean:dist && tsc && tsc-alias && pnpm copy-files",
        "build:test": "tsc --noEmit",
        "copy-files": "copyfiles -u 1 ./src/views/*.ejs dist/ && copyfiles -u 0 ./.env dist/",
        "clean": "pnpm clean:dist && pnpm clean:pkgs",
        "clean:dist": "rimraf ./dist",
        "clean:pkgs": "rimraf ./node_modules ./pnpm-lock.yaml",
        "lint": "eslint --ext .ts ./src",
        "lint:fix": "eslint --ext .ts ./src --fix",
        "deps": "depcheck"
    },
    "dependencies": {
        "bcrypt": "^5.1.0",
        "chalk": "^5.2.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-rate-limit": "^6.7.0",
        "helmet": "^6.1.5",
        "md5": "^2.3.0",
        "moment": "^2.29.4",
        "mongoose": "^7.1.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "sharp": "^0.32.1",
        "shortid": "^2.2.16",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@bleed-believer/path-alias": "^0.14.0",
        "@evilmartians/lefthook": "^1.3.12",
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/md5": "^2.3.2",
        "@types/morgan": "^1.9.4",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.16.4",
        "@types/shortid": "^0.0.29",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "depcheck": "^1.4.3",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.8",
        "rimraf": "^5.0.0",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.6",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.0.4"
    }
}