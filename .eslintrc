{
    "root": true,
    "env": {
        "node": true
    },
    "globals": {
        "NodeJS": true,
        "BigInt": true
    },
    "parserOptions": {
        "ecmaVersion": "latest"
        // "parser": "@typescript-eslint/parser"
    },
    "plugins": ["@typescript-eslint", "import"],
    "extends": ["plugin:@typescript-eslint/eslint-recommended", "plugin:@typescript-eslint/recommended", "prettier"],
    "settings": {
        "import/extensions": [".ts", ".cts", ".mts", ".tsx", ".js", ".cjs", ".mjs", ".jsx"],
        "import/external-module-folders": ["node_modules", "node_modules/@types"],
        "import/parsers": {
            "@typescript-eslint/parser": [".ts", ".cts", ".mts", ".tsx"]
        },
        "import/resolver": {
            "node": {
                "extensions": [".ts", ".cts", ".mts", ".tsx", ".js", ".cjs", ".mjs", ".jsx"]
            }
        }
    },
    "rules": {
        // TypeScript eslint options
        "@typescript-eslint/explicit-function-return-type": [
            "error",
            {
                "allowExpressions": true
            }
        ],
        "@typescript-eslint/explicit-member-accessibility": "off",
        "@typescript-eslint/interface-name-prefix": "off",
        "@typescript-eslint/no-empty-function": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-non-null-assertion": "off",

        // Import rules
        "import/named": "off",
        "import/order": [
            "error",
            {
                "newlines-between": "always",
                "groups": [
                    [
                        "external", // all library imports - configured in 'import/external-module-folders'
                        "internal", // configured in 'import/internal-regex'
                        "builtin" // internal-library imports
                    ],
                    "unknown", // defined in 'pathGroups'
                    ["parent", "sibling", "index"] // relative paths
                ],
                "pathGroups": [
                    {
                        "pattern": "@/**",
                        "group": "unknown"
                    },
                    {
                        "pattern": "~/**",
                        "group": "unknown"
                    }
                ],
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": false
                },
                "distinctGroup": true
            }
        ],

        // General eslint options
        "eol-last": ["error", "always"],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [2, "unix"],
        "no-undef": "off",
        "quotes": [
            "error",
            "double",
            {
                "avoidEscape": true
            }
        ],
        "semi": ["error", "always"],
        "semi-spacing": "error",
        "semi-style": ["error", "last"]
        // "sort-imports": [
        //     "error",
        //     {
        //         "memberSyntaxSortOrder": ["none", "all", "single", "multiple"]
        //     }
        // ]
    },
    "overrides": [
        {
            "files": ["*.js", "*.jsx"],
            "rules": {
                "@typescript-eslint/no-var-requires": "off"
            }
        },
        {
            // enable the rule specifically for TypeScript files
            "files": ["*.ts", "*.tsx"],
            "rules": {
                "@typescript-eslint/explicit-member-accessibility": [
                    "error",
                    {
                        "accessibility": "no-public"
                    }
                ]
            }
        }
    ]
}
